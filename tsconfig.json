{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./src/*"], 
      "@refactLib/*" : ["./lib/*"],
      "@temp/*" : ["./temp/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
